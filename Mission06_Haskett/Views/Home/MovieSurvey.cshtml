@model MovieSurvey

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}

<h1 style="text-align: center; color: darkblue">Enter a Movie to the Collection</h1>

<!--This is my form to have a user submit a record-->
<form method="post" style="max-width: 400px; margin: 0 auto; text-align: left; border: 1px solid #001f3f; padding: 20px; border-radius: 8px;">

    <input type="hidden" asp-for="MovieId" />
    
    <select asp-for="CategoryId">
        <option value="">Select a Category</option>
        @foreach (CategoryList c in ViewBag.Categories)
        {
            <option value="@c.CategoryId">@c.Category</option>
        }
    </select>

    <label asp-for="Title" style="display: block; margin-bottom: 5px;">Title:</label>
    <input asp-for="Title" style="width: 100%; padding: 8px; margin-bottom: 10px; box-sizing: border-box;" required>

    <label asp-for="Year" style="display: block; margin-bottom: 5px;">Year:</label>
    <input asp-for="Year" style="width: 100%; padding: 8px; margin-bottom: 10px; box-sizing: border-box;" required>

    <label asp-for="Director" style="display: block; margin-bottom: 5px;">Director:</label>
    <input asp-for="Director" style="width: 100%; padding: 8px; margin-bottom: 10px; box-sizing: border-box;">

    <label asp-for="Rating" style="display: block; margin-bottom: 5px;">Rating:</label>
    <select asp-for="Rating">
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>

    <label asp-for="Edited" style="display: block; margin-bottom: 5px;">Edited:</label>
    <select asp-for="Edited" required>
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>

    <label asp-for="LentTo" style="display: block; margin-bottom: 5px;">Lent To:</label>
    <input asp-for="LentTo" style="width: 100%; padding: 8px; margin-bottom: 10px; box-sizing: border-box;">

    <label asp-for="CopiedToPlex" style="display: block; margin-bottom: 5px;">Copied to Plex?</label>
    <select asp-for="CopiedToPlex" required>
        <option value="1">Yes</option>
        <option value="0">No</option>
    </select>

    <label asp-for="Notes" style="display: block; margin-bottom: 5px;">Notes:</label>
    <input asp-for="Notes" style="width: 100%; padding: 8px; margin-bottom: 10px; box-sizing: border-box;" maxlength="25">

    <button type="submit" style="background-color: #4CAF50; color: white; padding: 10px 15px; border: none; border-radius: 5px; cursor: pointer;">Enter Your Movie</button>

    <div asp-validation-summary="All"></div>
</form>
